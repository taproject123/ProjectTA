<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="project.ta.elearning.model.Tb_userModel" table="tb_user">
        <id name="id" column="id">
            <generator class="native"></generator>
        </id>
        <property name="username" length="100"/>
        <property name="password" length="255"/>
        <property name="firstname" length="100"/>
        <property name="lastname" length="100"/>
        <property name="email" length="100"/>
        <property name="skype" length="50"/>
        <property name="yahoo" length="50"/>
        <property name="phone1" length="20"/>
        <property name="phone2" length="20"/>
        <property name="institution" length="255"/>
        <property name="department" length="255"/>
        <property name="address" length="255"/>
        <property name="city" length="120"/>
        <property name="country" length="2"/>
        <property name="timezone" length="100"/>
        <property name="firstaccess" length="10"/>
        <property name="lastaccess" length="10"/>
        <property name="lastlogin" length="10"/>
        <property name="currentlogin" length="10"/>
        <property name="picture" length="10"/>
        <property name="description" type="text" />
        <property name="timecreated" length="10"/>
        <property name="timemodified" length="10"/>
        <property name="imagealt" length="255"/>
        <property name="lastnamephonetic" length="255"/>
        <property name="firstnamephonetic" length="255"/>
        <property name="middlename" length="255"/>
        <property name="alternatename" length="255"/>
        <property name="id_role" type="integer" length="10"/>
    </class>
  

</hibernate-mapping>
